    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${fileDirname}/main",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },
        {
            "name": "llbd - Debug main",
            "request": "launch",
            "type": "cppdbg",
            "program": "${fileDirname}/main.out",
            "cwd": "${fileDirname}",
            "MIMode": "lldb",
        }
    ]
}